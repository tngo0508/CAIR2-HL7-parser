@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This project uses Fluent UI 2 Web Components.</p>
    
    <div style="margin-top: 20px;">
        <fluent-button appearance="accent">Fluent Button</fluent-button>
        <fluent-card style="margin-top: 20px; padding: 20px; text-align: left;">
            <h3>Fluent Card</h3>
            <p>This is a sample card component from Fluent UI.</p>
            <fluent-text-field placeholder="Enter some text"></fluent-text-field>
            <fluent-checkbox>Check me</fluent-checkbox>
        </fluent-card>
    </div>

    <p style="margin-top: 20px;">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
